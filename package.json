{
	"name": "pa-win2linux",
	"displayName": "PA传送器",
	"description": "Use this extension to write on Windows and copy file(s) to Debian",
    "version": "0.2.0",
    "icon": "img/logo.png",
	"engines": {
		"vscode": "^1.33.0"
	},
	"publisher": "FutureYu",
	"keywords": ["ics", "PA", "ics2017", "nemu", "pa", "NUAA", "nuaa"],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.w2d",
		"onCommand:extension.d2w"
	],
    "main": "./out/extension.js",
    "homepage": "https://github.com/FutureYu/PA_W2D",
    "repository": {
		"type": "git",
		"url": "https://github.com/FutureYu/PA_W2D"
	},
	"contributes": {
        "configuration": {
            "type": "object",
            "title": "Win2Deb",
            "properties": {
                "w2d.yourName": {
                    "type": "string",
                    "default": "undefined",
                    "description": "虚拟机名字(姓名)"
                },
				"w2d.yourAddr": {
                    "type": "string",
                    "default": "undefined",
                    "description": "虚拟机ipaddr"
                }
            }
        },
		"commands": [
			{
				"command": "extension.w2d",
				"title": "复制到Debian"
            },
            {
				"command": "extension.d2w",
				"title": "从Debian复制"
			}
		],
        "keybindings": [
            {
                "command": "extension.w2d",
                "key": "ctrl+f2",
                "mac": "cmd+f2",
                "when": "editorTextFocus && resourceLangId == c"
            },
            {
                "command": "extension.w2d",
                "key": "ctrl+f2",
                "mac": "cmd+f2",
                "when": "editorTextFocus && resourceLangId == cpp"
            },
            {
                "command": "extension.d2w",
                "key": "ctrl+f3",
                "mac": "cmd+f3",
                "when": "editorTextFocus && resourceLangId == c"
            },
            {
                "command": "extension.d2w",
                "key": "ctrl+f3",
                "mac": "cmd+f3",
                "when": "editorTextFocus && resourceLangId == cpp"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus && resourceLangId == c",
                    "command": "extension.w2d",
                    "group": "6_navigation"
                },
                {
                    "when": "editorFocus && resourceLangId == cpp",
                    "command": "extension.w2d",
                    "group": "6_navigation"
                },
                {
                    "when": "editorFocus && resourceLangId == c",
                    "command": "extension.d2w",
                    "group": "6_navigation"
                },
                {
                    "when": "editorFocus && resourceLangId == cpp",
                    "command": "extension.d2w",
                    "group": "6_navigation"
                }
            ],
            "editor/title/context": [
                {
                    "when": "resourceLangId == c",
                    "command": "extension.w2d",
                    "group": "6_navigation"
                },
                {
                    "when": "resourceLangId == cpp",
                    "command": "extension.w2d",
                    "group": "6_navigation"
                },
                {
                    "when": "resourceLangId == c",
                    "command": "extension.d2w",
                    "group": "6_navigation"
                },
                {
                    "when": "resourceLangId == cpp",
                    "command": "extension.d2w",
                    "group": "6_navigation"
                }
            ],
            "explorer/context": [
                {
					"when": "resourceLangId == c",
                    "command": "extension.w2d",
                    "group": "6_navigation"
                },
                {
					"when": "resourceLangId == cpp",
                    "command": "extension.w2d",
                    "group": "6_navigation"
                },
                {
                    "when": "resourceLangId == c",
                    "command": "extension.d2w",
                    "group": "6_navigation"
                },
                {
                    "when": "resourceLangId == cpp",
                    "command": "extension.d2w",
                    "group": "6_navigation"
                }
            ]
        }
		
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
